{
  "name": "rss-to-telegram",
  "version": "1.0.0",
  "description": "Fetch notifications from the RSS url and send them to telegram.",
  "main": "startup.js",
  "scripts": {
    "build": "rimraf build && tsc --p tsconfig.json",
    "start": "env-cmd -f ./.env node ./build/startup.js",
    "dev": "env-cmd -f ./.env.dev.local nodemon --exec ts-node ./src/startup.ts",
    "lint": "eslint src --fix --ext .js,.ts"
  },
  "author": "Ricardo Teixeira <rteixxeira86@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "env-cmd": "^10.1.0",
    "rss-parser": "^3.9.0",
    "telegraf": "^3.38.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.5",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
